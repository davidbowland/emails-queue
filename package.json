{
  "name": "emails-queue-service",
  "author": "David Bowland",
  "description": "Sends emails queued in SQS",
  "version": "1.32.0",
  "engines": {
    "node": "^16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidbowland/emails-queue-service.git"
  },
  "bugs": {
    "url": "https://github.com/davidbowland/emails-queue-service/issues"
  },
  "homepage": "https://github.com/davidbowland/emails-queue-service#readme",
  "scripts": {
    "build": "npm run clean && tsc && cp package*.json dist/ && cd dist/ && HUSKY=0 NODE_ENV=production npm ci",
    "clean": "rm -rf dist coverage && NODE_ENV=test npm ci",
    "deploy": "npm run build && ./scripts/deploy.sh",
    "lint": "prettier --write . && eslint --fix . --resolve-plugins-relative-to .",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky install ; fi",
    "start": "npm run build && npm run quick-start",
    "quick-start": "tsc && ./scripts/runLocal.sh",
    "test": "jest --colors",
    "typecheck": "tsc --noEmit",
    "update": "ncu -u --doctor && npm audit fix --audit-level=none && npm run test && npm dedupe"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write --ignore-unknown",
      "eslint --resolve-plugins-relative-to . --fix",
      "jest --colors --findRelatedTests --coverageThreshold '{}'"
    ],
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "dependencies": {
    "aws-sdk": "^2.1256.0",
    "aws-xray-sdk-core": "^3.4.0",
    "nodemailer": "^6.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/aws-lambda": "^8.10.108",
    "@types/jest": "^29.2.3",
    "@types/nodemailer": "^6.4.6",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "babel-jest": "^29.3.1",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.1.5",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
